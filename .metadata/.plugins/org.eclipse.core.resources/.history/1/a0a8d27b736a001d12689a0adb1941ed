package com.ImageProcessingMultithreading;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.util.Scanner;

import javax.imageio.ImageIO;

public class MyImage implements Runnable{
	
	String imageName;
	public void setImageName(String name) {
		imageName = name;
		System.out.println("hii");
	}
	
	@Override
	public void run() {
		int width = 963;
	  	  
        int height = 640;
        
    	BufferedImage image = null;
    	
    	File input_File = new File("C:\\Users\\DELL\\Downloads/"+imageName+".png");
    	
    	try {
			image = new BufferedImage(width, height, BufferedImage.TYPE_INT_ARGB);
			
			image = ImageIO.read(input_File);
			
			System.out.println(image);
			System.out.println("Reading complete.");
			
		} catch (IOException e) {

			e.printStackTrace();
		}
    	catch (Exception e) {

			e.printStackTrace();
		}
    	

		// WRITE IMAGE
        try {
            // Output file path
            File output_file = new File("C:\\Users\\DELL\\Downloads/image55.png");
  
            // Writing to file taking type and path as
            ImageIO.write(image, "png", output_file);
  
            System.out.println("Writing complete.");
        }
        catch (IOException e) {
            System.out.println("Error: " + e);
        }
    	 
		
	}

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		MyImage myImageThread = new MyImage();
		myImageThread.setImageName(sc.next());
		
		MyImage myImageThreadTwo = new MyImage();
		
		Thread thread1 = new Thread(myImageThread);
		Thread thread2 = new Thread(myImageThreadTwo);
		thread1.start();
		
		thread2.start();
		
	}

}
